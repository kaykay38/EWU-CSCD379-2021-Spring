@model List<GroupViewModel>

@{
    ViewBag.Title = "Groups";
}

@{int counter = 0;}

<section class="grid sm:grid-cols-3">
@foreach(var groupViewModel in Model) {
    <section class="border-gray-500 border-2 m-5 p-7 rounded-lg flex justify-between" >
        <a asp-action="Edit" asp-route-id=@counter class="text-2xl sm:text-3xl text-gray-600 leading-4 hover:text-green-600">
            @groupViewModel.Name
            </a>
        <form asp-action="Delete" asp-route-id=@counter method="post"><button class="fa-trash-btn" onclick="return confirm('You are about to delete @groupViewModel.Name. Are you sure you want to do this?')"><i class="fas fa-trash text-2xl sm:text-3xl leading-4"></i></button></form>
        @{counter++;}
    </section>
}
</section>
<section>
    <button class="btn">
    <a asp-action="Create" class="text-2xl sm:text-3xl p-6">Create</a>
    </button>
</section>