@model List<UserViewModel>

@{int counter = 0;}

@foreach (var user in Model)
{
<section>
    @user.FirstName @user.LastName <a asp-controller="Users" asp-action="Update" asp-route-id=@counter>Edit</a> <a asp-controller="Users" asp-action="Delete" asp-route-id=@counter>Delete</a>
    @{counter++;}
</section>

}
